# Supabase Configuration
# These values can be found in your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
# For local docker (develop):
NEXT_PUBLIC_SUPABASE_URL_DEV=http://localhost:54321
SUPABASE_SERVICE_ROLE_KEY=dev-service-role-or-override
SUPABASE_USE_LOCAL=false
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Prisma / Database connection
# Supabase local (default) connection string used by Prisma migrations
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
# Optional: direct connection string for connection-pooled environments
# DIRECT_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# Notion Data Import Configuration
# Set this to your actual Supabase user ID for importing Notion data
# You can find this in Supabase Dashboard > Authentication > Users
IMPORT_USER_ID=your_user_id_here

# Development/Production Environment
NODE_ENV=development
